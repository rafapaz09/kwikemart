@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to build ASP.NET apps that can run anywhere.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    There are powerful new features in Visual Studio for building modern web apps.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="table-responsive">
        <table id="dt-resultado" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Popularity</th>
                    <th width="12%">-</th>
                </tr>
            </thead>
            <tbody id="dt-resultado-body"></tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Popularity</th>
                    <th>-</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {

            function loadDataTable() {
                //$(".wait_load").css("display", "block");
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetAllProducts", "Home")',
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    //data: JSON.stringify({
                    //    FechaInicial: start.format('YYYY-MM-DD'),
                    //    FechaFinal: end.format('YYYY-MM-DD'),
                    //    Estado: $("#cmbEstadoListado").val(),
                    //    Ciudad: $("#cmbCiudad").val()
                    //}),
                    success: function (data) {
                        if (data.success === true) {
                            $('#dt-resultado').DataTable().destroy();
                            $("#dt-resultado-body").html(data.data);
                            $('#dt-resultado').DataTable(dtOptions);
                            //$(".wait_load").css("display", "none");

                        } else {
                            $(".wait_load").css("display", "none");
                            console.log(data.responseText);
                            alertify.alert("Mensaje de Sistema", data.responseText)
                                .set('movable', false).set('label', 'Aceptar');
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        $(".wait_load").css("display", "none");
                        console.log(textStatus, errorThrown);
                    }
                });
            }
            loadDataTable();
        });

        function editarCotizacion(id) {
            showLoading();
            window.location.href = encodeURI('@Url.Action("Details", "Products")' + '?id=' + id);
        }

    </script>

}
